<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".theaboutgeneral">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/fclub2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/heading1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Who are we?"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Frequency Club of R.V. College of Engineering aims to deveop projects related with technologies such as Artiificial Intelligence,, Image Processing, Augmented and Virtual Reality, Internet of Things and participates in various hackathons."
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/heading2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What we do?"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We implement projects in AI,ML,IoT,Image Processing, Automation, and other state-of-the-art  technologies.We also conduct introductory and advanced prototyping workshops  by the Industry people for the students to get hands-on experience  in the above mentioned subjects.\nWe plan off-campus visits for various competitions and hackathons. We do plan to attend tech fests in various colleges."
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/heading3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Present Team"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Faculty Advisor - Prof. S. Venkatesh (EIE Dept.)\nTechnical Advisor - Prof. Vinay Hegde (CSE Dept.) \nTeam Captain - Auchinto Chatterjee\nTeam Captain (Financial) - Akash Kumar Ghanate\nCore Team Members - 8 \nSenior Engineers - 20+\nJunior Engineers -45+"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/heading4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/heading5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Core Team (2018-19)"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/content5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auchinto Chatterjee (Team Captain)\nAkash Kumar Ghanate (Team Captain,Financial)\nPremal Singh (Technical Head,Software)\nRamakrishna Makani(Technical Head,Hardware)\nVaishnavie Sangam (HR Head) \nRohan Sanghvi(Technical Coordinator)\nSaksham Lakhera(Technical Coordinator)\nPratyush Singh(Creative Works Head)"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone: +91-9902426560, +91-9632520345\n\nAddress:\nRoom no. 408, Interdisciplinary Research Centre, \nR.V. College of Engineering,\nBangalore -560059"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/maplink"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/gmap" />

                <TextView
                    android:id="@+id/heading6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About the App"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/content6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This app has been developed by Frequency Club.\nFor any software errors, do let us know about it at frequencyclub@rvce.edu.in\nVersion: 0.9.0"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/heading7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n\nDownload latest release from our website."
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/content7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Â© Frequency Club. All rights reserved."
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="542dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebookbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/download" />

        <ImageView
            android:id="@+id/linkedinbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/unnamed" />

        <ImageView
            android:id="@+id/githubbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/github" />

        <ImageView
            android:id="@+id/webbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/internet2" />

        <ImageView
            android:id="@+id/emailbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/gmail" />

    </LinearLayout>

</RelativeLayout>