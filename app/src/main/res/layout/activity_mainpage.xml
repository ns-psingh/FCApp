    <TextView
        android:id="@+id/userpost"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/userfullname"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/imageView3"
