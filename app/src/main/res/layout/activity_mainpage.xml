                </LinearLayout>

                <EditText
                    android:id="@+id/newsfromuser"
                    android:layout_width="331dp"
                    android:layout_height="183dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="8dp"
